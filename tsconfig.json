{
  "compilerOptions": {
    "sourceMap": false,
    "noEmitOnError": true,
    "outDir": "dist",
    "rootDir": "./src",
    "strict": true,
    "lib": ["esnext"],
    "target": "es2019",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "nodenext",
    "moduleResolution": "nodenext"
  },
  "include": ["src/**/*"]
}